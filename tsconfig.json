{
  "compilerOptions": {
    "target": "ES6",                                 
    "module": "NodeNext", 
    "moduleResolution": "NodeNext",                              
    "rootDir": "./src",                                 
    "outDir": "./dist",                                         
    "strict": true,                                                  
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
